<div class="admin-page">
    <div> <%= render "admin/static_pages/sidebar" %> </div>
    <div class="account-manage-page">

    <table class="rwd-table">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
      </tr>
    </thead>
    <tbody>
        <% @subjects.each do |subject| %>
        <tr>
            <td><%= subject.name %></td>
            <td>
                <div class="action-btn">
                    <%= link_to edit_admin_subject_path(subject) do %>
                        <span class="fa fa-edit"></span>
                    <% end %>
                    <%= link_to admin_subject_path(subject), method: :delete, data: { confirm: "Bạn có chắc là muốn xóa không?" } do %>
                        <span class="fa fa-trash"></span>
                    <% end %>
                </div>
            </td>
        </tr>
        <% end %>
    </tbody>
  </table>
    <%== pagy_nav(@pagy) %>
  </div>
</div>
