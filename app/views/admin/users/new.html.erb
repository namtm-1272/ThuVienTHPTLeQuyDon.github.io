<div class="admin-page">
  <div> <%= render "admin/static_pages/sidebar" %> </div>
  <div class="form-container">
    <div class="form row">
      <div class="edit-account">
        <p class="form-title">Tài khoản mới</p>
        <%= form_for [:admin, @user] do |f| %>
          <%= render "admin/shared/error_messages", object: f.object %>
          <%= f.label :username, "Tài khoản (*)" %>
          <%= f.text_field :Tk, class: "form-control"%>
          <%= f.label :password, "Mật khẩu (*)" %>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.label :name, "Tên (*)" %>
          <%= f.text_field :name, class: "form-control" %>
          <%= f.label :birthday, "Ngày sinh" %>
          <%= f.date_field :birthday, class: "form-control" %>
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control"%>
          <%= f.label :role, "Chức vụ" %>
          <%= f.select :role, User.roles.keys, class: "form-control"%>
          <%= f.label :id_lop, "Lớp" %>
          <%= collection_select(:user, :class_user_id, @class_users, :id, :name) %>
          <%= f.submit "New", class: "submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
